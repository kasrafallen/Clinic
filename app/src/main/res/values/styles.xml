<resources>

    <style name="AppTheme" parent="Theme.Design.Light.NoActionBar">
        <item name="colorPrimary">@color/toolbar</item>
        <item name="colorPrimaryDark">@color/status</item>
        <item name="colorAccent">@color/theme</item>
        <item name="android:windowBackground">@color/toolbar</item>
    </style>

    <style name="AppTheme.Dialog" parent="Theme.AppCompat.Dialog.Alert">
        <item name="android:background">@color/white</item>
    </style>

    <style name="AppThemeTransparent" parent="Theme.Design.Light.NoActionBar">
        <item name="colorPrimary">@color/toolbar</item>
        <item name="colorPrimaryDark">@color/transparent</item>
        <item name="colorAccent">@color/theme</item>
    </style>

</resources>
